<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
        <EditTextPreference
        android:defaultValue="@string/pref_pre_balance_regex_default"
        android:key="pref_pre_balance_regex"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Prepaid Balance Regex" />
    <EditTextPreference
        android:defaultValue="@string/pref_post_balance_due_regex_default"
        android:key="pref_post_balance_due_regex"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Postpaid Balance Due Regex" />
    <EditTextPreference
        android:defaultValue="@string/pref_post_balance_credit_regex_default"
        android:key="pref_post_balance_credit_regex"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Postpaid Balance Credit Regex" />
    <EditTextPreference
        android:defaultValue="@string/pref_balance_topup_regex_default"
        android:key="pref_balance_topup_regex"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Balance Top Up Message Regex" />
    <EditTextPreference
        android:defaultValue="@string/pref_sms_pack_info_regex_default"
        android:key="pref_sms_pack_info_regex"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="SMS Pack Info Regex" />
    <EditTextPreference
        android:defaultValue="@string/pref_sms_pack_null_regex_default"
        android:key="pref_sms_pack_no_regex"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="SMS Pack Null Regex" />
    <EditTextPreference
        android:defaultValue="@string/pref_sms_pack_active_default"
        android:key="pref_sms_pack_active"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="SMS Pack Activated Message Regex" />
    <EditTextPreference
        android:defaultValue="@string/pref_stitch_update_func_default"
        android:key="pref_stitch_update_func"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Stitch Update Function" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

</PreferenceScreen>
